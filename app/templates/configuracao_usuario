    <script>
        // Função para alternar o modo escuro/claro
        function toggleTheme() {
            document.body.classList.toggle('dark-mode');
            document.body.classList.toggle('light-mode');
            // Sincronizar o estado do switch na modal
            const themeSwitchModal = document.getElementById('themeSwitchModal');
            if (document.body.classList.contains('dark-mode')) {
                themeSwitchModal.checked = true;
            } else {
                themeSwitchModal.checked = false;
            }
        }

        // Event listeners para alternar o tema a partir da modal
        const themeSwitchModal = document.getElementById('themeSwitchModal');
        themeSwitchModal.addEventListener('change', toggleTheme);

        // Removi o botão de alternar tema da navbar conforme solicitado

        // Manipulador do formulário de relatório de erro
        document.getElementById('errorReportForm').addEventListener('submit', function (e) {
            e.preventDefault();
            const errorDescription = document.getElementById('errorDescription').value;
            // Aqui você pode adicionar o código para enviar o relatório de erro para o servidor
            alert('Erro relatado: ' + errorDescription);
            // Fecha o modal após enviar
            var reportErrorModal = bootstrap.Modal.getInstance(document.getElementById('reportErrorModal'));
            reportErrorModal.hide();
            // Limpa o formulário
            document.getElementById('errorReportForm').reset();
        });

        // Manipulador do formulário de mudança de idioma
        document.getElementById('languageForm').addEventListener('submit', function (e) {
            e.preventDefault();
            const selectedLanguage = document.getElementById('selectLanguage').value;
            if (selectedLanguage) {
                // Aqui você pode implementar a lógica para mudar o idioma do site
                // Por exemplo, recarregar a página com o novo idioma
                // Para simplificação, vamos apenas alterar o atributo 'lang' do <html>
                document.documentElement.lang = selectedLanguage;
                alert('Idioma alterado para: ' + document.getElementById('selectLanguage').options[document.getElementById('selectLanguage').selectedIndex].text);
                // Fecha o modal após a mudança
                var changeLanguageModal = bootstrap.Modal.getInstance(document.getElementById('changeLanguageModal'));
                changeLanguageModal.hide();
            }
        });

        // Inicializar o switch de tema na modal com base no estado atual
        document.addEventListener('DOMContentLoaded', function () {
            const themeSwitchModal = document.getElementById('themeSwitchModal');
            themeSwitchModal.checked = document.body.classList.contains('dark-mode');
        });
    </script>

